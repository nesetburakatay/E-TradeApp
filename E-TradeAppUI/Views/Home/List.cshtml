@using E_TradeAppUI.Entity
@model IEnumerable<Product>
@{
    ViewBag.Title = "List";
}



<div class="container pb-5 pt-5">
    <div class="row">
        <div class="col-md-3">
            @Html.Action("GetCategories", "Home")
        </div>
        <div class="col-md-9">

            @if (Model.Count() > 0)
            {
                <div class="alert alert-secondary" role="alert">
                    Kategori Altında <strong>@Model.Count()</strong> adet Ürün Bulundu
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa-solid fa-circle-exclamation"></i>
                    Kategori Altında <strong>@Model.Count()</strong> adet Ürün Bulundu
                </div>
            }

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card-deck mb-4">
                            <div class="card opacity">
                                <img src="~/Uploads/@item.Picture" class="card-img-top fitImageSquare" alt="@item.Name">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text">@item.Description</p>
                                    <a href="/Home/Details/@item.Id" class="stretched-link"></a>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@item.Price</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>