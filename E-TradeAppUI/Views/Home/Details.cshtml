@using E_TradeAppUI.Entity
@model Product
@{
    ViewBag.Title = "Details";
}





<div class="container pb-5 pt-5">
    <div class="row">
        <div class="col-md-5">
            <!-- <img src="holder.js/100px200" class="img-responsive w-100" alt=""> -->
            <div class="card-deck">
                <div class="card">
                    <!-- <img src="holder.js/100px200" class="card-img-top fitImageSquare" alt="..."> -->
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/Uploads/@Model.Picture" class="d-block fitImageSquare" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="holder.js/100px200" class="d-block fitImageSquare" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="holder.js/100px200" class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                           data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                           data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <p class="card-text">@Model.Description</p>
                        <a href="#" class="btn btn-primary">Click for Bigger Pictures</a>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Last updated 3 mins ago</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="row mt-1">
                <div class="col-md-12">
                    <h1>@Model.Name #2123124</h1>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-12">
                    @if (Model.IsApproved == true)
                    {
                        <span class="badge badge-primary">In Stock</span>
                    }
                    else
                    {
                        <span class="badge badge-warning">Out of Stock</span>
                    }
                    <span class="product-number">#2314231</span>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-12">
                    <div id="description">
                        @Model.Description
                    </div>

                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-12">
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star-half-stroke"></i>
                    <span class="badge badge-success">53</span>

                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-12">
                    <h4 id="product-price">$@Model.Price</h4>
                </div>
            </div>




            <div class="row mt-1">
                <div class="col-md-12">
                    @if (Model.IsApproved == true)
                    {
                        using (@Html.BeginForm("AddToCart", "Cart"))
                        {
                            @Html.HiddenFor(i => i.Id)
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-cart-plus"></i>
                                add to cart
                            </button>
                        }

                    }
                    else
                    {
                        using (@Html.BeginForm("AddToCart", "Cart"))
                        {
                            @Html.HiddenFor(i => i.Id)
                            <button type="submit" class="btn btn-secondary" disabled>
                                <i class="fa-solid fa-cart-plus"></i>
                                add to cart
                            </button>
                        }

                    }

                </div>
            </div>

        </div>
    </div>
</div>
